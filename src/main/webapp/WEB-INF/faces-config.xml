<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <message-bundle>org.xtremeware.iudex.exceptions</message-bundle>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{signUp.signUp}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/registrationComplete.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{signUp.signUp}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.logIn}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.logIn}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.logIn}</from-action>
            <from-outcome>requiresCaptcha</from-outcome>
            <to-view-id>/logIn.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/logIn.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.logIn}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.logIn}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/logIn.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/courses/view.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>notfound</from-outcome>
            <to-view-id>/notfound.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/subjects/view.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>notfound</from-outcome>
            <to-view-id>/notfound.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logIn</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editUser</from-outcome>
            <to-view-id>/user/edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>forgottenPassword</from-outcome>
            <to-view-id>/forgottenPassword.xhtml</to-view-id>
        </navigation-case>
		<navigation-case>
            <from-outcome>feedback</from-outcome>
            <to-view-id>/feedback/create.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
	<navigation-rule>
        <navigation-case>
            <from-action>#{search.submit}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/search.xhtml</to-view-id>
            <redirect>
                <view-param>
                    <name>query</name>
                    <value>#{search.query}</value>
                </view-param>
            </redirect>
         </navigation-case>
    </navigation-rule>
</faces-config>
